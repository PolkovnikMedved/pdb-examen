<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.solodoukhin.controller.WaiterController">
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
            <content>
                <TableView fx:id="waiterTableView" editable="true" prefHeight="400.0" prefWidth="544.0">
                    <columns>
                        <TableColumn fx:id="code" prefWidth="75.0" text="Code" />
                        <TableColumn fx:id="lastName" prefWidth="75.0" text="Nom" />
                        <TableColumn fx:id="firstName" prefWidth="75.0" text="Prenom" />
                        <TableColumn fx:id="email" prefWidth="75.0" text="Email" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </content>
        </ScrollPane>
    </center>
    <right>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btValide" mnemonicParsing="false" prefHeight="26.0" prefWidth="90.0" text="Valide" />
                <Button onAction="#reload" mnemonicParsing="false" prefHeight="26.0" prefWidth="90.0" text="Recharge" />
                <Button fx:id="quitButton" onAction="#exit" mnemonicParsing="false" prefHeight="26.0" prefWidth="90.0" text="Retour" />
            </children>
        </VBox>
    </right>
</BorderPane>
